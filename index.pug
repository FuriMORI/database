html
    head
        link(ref="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="css/materialize.min.css" media="screen,projection")
        link(rel="stylesheet" href="css/app.css")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
    body
        script(type="text/javascript" src="js/materialize.min.js")
        div(class="container")
            each row in results
                div(class="row")
                    div(class="col 12")
                        img(class="icon" src="icons/"+row['restaurant_name']+".png")
                    div(class="col s11")
                        div(class="restaurantname") #{row['restaurant_name']}
                        div(class="restaurantcategory") #{row['category']}
                        div(class="restaurantinfo") #{row['delivery_time']}Min ★#{row['restaurant_evaluation']} ¥#{row['charge']} Delivery Fee
                        div #{row['content']}
        
